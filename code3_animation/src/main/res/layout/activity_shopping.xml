<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/gift" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/selector_blue_round"
            android:gravity="center"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_shopping_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/shopping_cart_empty" />

    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/iv_shopping_cart"
        android:layout_alignRight="@id/iv_shopping_cart"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/shape_red_round"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone"
        />

</RelativeLayout>